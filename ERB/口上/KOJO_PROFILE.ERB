	FOR LCOUNT, 0, FLAG:Cha总数
		SIF STRFIND(RESULTS, @"/K{LCOUNT}/") >= 0
			PRINTFORM [%CSVCALLNAME(LCOUNT, 0)%]
	NEXT
ENDIF
;男判定
SIF STRFIND(RESULTS, @"/MALE/") >= 0
	PRINT [男人] 
;女判定
