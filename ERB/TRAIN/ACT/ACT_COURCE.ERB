;ここで影响做的是４方针的みな的で注意
;-------------------------------------------
@ACT_COURCE_OF_TODAY
;今日的方针
SELECTCASE POLICY("今日")
	CASE "肛门"
		CALL ADD_CRI_VAR("温和"  , -5)
	CASE "强硬"
		CALL ADD_CRI_VAR("温和"  , -5)
		CALL ADD_CRI_VAR("普通", -2)
