	CASE Ｃ道具
		TCVAR:ARG:助手ACT = GET_ASSIACTNUM("Ｃ道具")
	CASE 逆强奸
		TCVAR:ARG:助手ACT = GET_ASSIACTNUM("逆强奸")
ENDSELECT

