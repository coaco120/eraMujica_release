	TARGET = -1
ELSEIF TARGET > ARG
	TARGET -= 1
ENDIF
IF ASSI == ARG
	ASSI = -1
ELSEIF ASSI > ARG
	ASSI -= 1
ENDIF
DELCHARA ARG

