;==================================================
;
;判断反映处理
;
;==================================================
@EST_TO_ACTM(ARGS, ARGS:1, ARG)
#FUNCTION
#LOCALSIZE 20
#DIM LTEMP
[SKIPSTART]
IF ARGS == "初期化"
	VARSET LOCAL
	RETURNF 0
ENDIF
LTEMP = GET_ACTNUM(ARGS:1)
SIF LTEMP < 0
	RETURNF 0
IF ARGS == "加算"
	LOCAL:GET_ACTNUM(ARGS:1) = ARG
ELSEIF ARGS == "取得"
	RETURNF LOCAL:GET_ACTNUM(ARGS:1)
ENDIF
[SKIPEND]

