[SKIPSTART]
;体力・气力管理
@OBJM_T_VIT(ARGS)
#LOCALSIZE 1
#DIMS 同一调教判定
#DIM L体力
#DIM L气力
#DIM 体力消费速度
#DIM 气力消费速度
#DIM 信頼度
#DIM 回合
#DIM 予測体力消费速度
#DIM 予測气力消费速度
#DIM 予測信頼度
#DIM 休息
;同一调教判定
LOCALS = %SAME_TURN("调教")%
;同一调教でなければ
IF 同一调教判定 != LOCALS
	;变数初期化
	同一调教判定 = %LOCALS%
	体力消费速度 = 0
	气力消费速度 = 0
	信頼度 = 0
;休息被挟んでいなければ
ELSEIF (DATABASE_I_AM("休息") - 休息) == 0
	;体力・气力消费量记录
	IF L体力 != 0 && BASE:MASTER:体力 != 0
		LOCAL = (L体力 - BASE:MASTER:体力) / (TFLAG:调教时间 - 回合)
		体力消费速度 = 信頼度 == 0 ? LOCAL # (体力消费速度 + LOCAL) / 2
	ENDIF
	IF L气力 != 0 && BASE:MASTER:气力 != 0
		LOCAL = (L气力 - BASE:MASTER:气力) / (TFLAG:调教时间 - 回合)
		气力消费速度 = 信頼度 == 0 ? LOCAL # (气力消费速度 + LOCAL) / 2
	ENDIF
	信頼度 += TFLAG:调教时间 - 回合
ENDIF
L体力 = BASE:MASTER:体力
L气力 = BASE:MASTER:气力
回合 = TFLAG:调教时间
休息 = DATABASE_I_AM("休息")

NOSKIP
PRINTVL 体力消费速度
PRINTVL 气力消费速度
PRINTVL L体力
PRINTVL L气力
ENDNOSKIP
[SKIPEND]

