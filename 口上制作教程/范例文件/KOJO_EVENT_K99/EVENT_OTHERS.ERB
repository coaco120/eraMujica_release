;方针:实施惩罚
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "お仕置き")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方针:激烈调教
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "ハード")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方针:任你撒娇
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "イチャイチャ")
	PRINTFORMW 
	RETURN 1
